            <input type="hidden" name="original.OgrenciOkulBilgi.YatakNo" value="@Model.OgrenciOkulBilgi?.YatakNo" />
            <input type="hidden" name="original.OgrenciOkulBilgi.OdaNo" value="@Model.OgrenciOkulBilgi?.OdaNo" />

            <input type="hidden" name="original.OgrenciOkulBilgi.Id" value="@Model.OgrenciOkulBilgi?.Id" />
            <input type="hidden" name="original.OgrenciAdresBilgi.Id" value="@Model.OgrenciOkulBilgi?.Id" />
            <input type="hidden" name="original.OgrenciAileBilgi.Id" value="@Model.OgrenciOkulBilgi?.Id" />

