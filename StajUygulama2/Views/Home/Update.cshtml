                        <div class="tab-content py-3 px-3 px-sm-0" id="nav-tabContent">
                            <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
                                <div class="row" style="padding-left: 10px; padding-right: 10px;">
                                    <div class="col-md-6 col-sm-12">
                                        <div class="form-group">
                                            <label>Kodu: </label>
                                            <input asp-for="Id" class="form-control" disabled="disabled" />
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-sm-12">
                                        <div class="form-group">
                                            <label>Dönemi: </label>
                                            <select class="form-control" asp-for="Donem">
                                                <option value="0">2020-2021</option>
                                                <option value="1">2019-2020</option>
                                                <option value="2">2018-2019</option>
                                                <option value="3">2017-2018</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="row" style="padding-left: 10px; padding-right: 10px;">
                                    <div class="col-md-4 col-sm-12">
                                        <div class="form-group">
                                            <label>Adı: </label>
                                            <span asp-validation-for="Ad" class="text-danger">*</span>
                                            <input asp-for="Ad" id="ad" class="form-control" />
                                        </div>
                                        <div class="form-group">
                                            <label>Soyadı: </label>
                                            <span asp-validation-for="Soyad" class="text-danger">*</span>
                                            <input id="soyad" asp-for="Soyad" class="form-control" />
                                        </div>
                                        <div class="form-group">
                                            <label>Cinsiyet: </label>
                                            <select class="form-control" asp-for="Cinsiyet">
                                                <option value="0">Kadın</option>
                                                <option value="1">Erkek</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-4 col-sm-12">
                                        <div class="form-group">
                                            <label>Doğum Tarihi: </label>
                                            <input type="date" asp-for="DogumTarihi" class="form-control" />
                                        </div>
                                        <div class="form-group">
                                            <label>Doğum Yeri: </label>
                                            <input asp-for="DogumYeri" class="form-control" />
                                        </div>
                                        <div class="form-group">
                                            <label>Kan Grubu: </label>
                                            <select class="form-control" asp-for="KanGrubu">
                                                <option value="0">A Pozitif</option>
                                                <option value="1">A Negatif</option>
                                                <option value="2">B Pozitif</option>
                                                <option value="3">B Negatif</option>
                                                <option value="4">AB Pozitif</option>
                                                <option value="5">AB Negatif</option>
                                                <option value="6">0 Pozitif</option>
                                                <option value="7">0 Negatif</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-4 col-sm-12">
                                        <div class="form-group">
                                            <h4 style="margin: 10px; font-family: sans-serif; font-weight: bold;">Fotoğraf</h4>
                                            <input style="height:190px; width:200px" type="file" class="form-control"><br />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
                                <div class="row" style="padding-left: 10px; padding-right: 10px;">
                                    <div class="col-md-6 col-sm-12">
                                        <div class="form-group">
                                            <label>Anne Ve Baba Birlikte Mi: </label>
                                            <select class="form-control" asp-for="OgrenciAileBilgi.AnneBabaDurum">
                                                <option value="0">Ayrı </option>
                                                <option value="1">Birlikte </option>
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <label>Kiminle Kalıyor: </label>
                                            <select class="form-control" asp-for="OgrenciAileBilgi.KiminleKaliyor">
                                                <option value="0">Anne İle</option>
                                                <option value="1">Baba İle</option>
                                                <option value="2">Hep Birlikte</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-sm-12">
                                        <div class="form-group">
                                            <label>Kardeş Sayısı: </label>
                                            <input asp-for="OgrenciAileBilgi.KardesSayisi" class="form-control" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane fade" id="nav-contact" role="tabpanel" aria-labelledby="nav-contact-tab">
                                <div class="row" style="padding-left: 10px; padding-right: 10px;">
                                    <div class="col-md-4 col-sm-12">
                                        <div class="form-group">
                                            <label>Adres1: </label>
                                            <input asp-for="OgrenciAdresBilgi.Adres1" class="form-control" />
                                        </div>
                                        <div class="form-group">
                                            <label>Adres2: </label>
                                            <input asp-for="OgrenciAdresBilgi.Adres2" class="form-control" />
                                        </div>
                                        <div class="form-group">
                                            <label>Statu: </label>
                                            <select class="form-control" asp-for="OgrenciAdresBilgi.Statu">
                                                <option value="0">Kullanımda</option>
                                                <option value="1">Kullanımda Değil</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-4 col-sm-12">
                                        <div class="form-group">
                                            <label>Semt: </label>
                                            <input asp-for="OgrenciAdresBilgi.Semt" class="form-control" />
                                        </div>
                                        <div class="form-group">
                                            <label>Şehir: </label>
                                            <input asp-for="OgrenciAdresBilgi.Sehir" class="form-control" />
                                        </div>
                                        <div class="form-group">
                                            <label>Posta Kodu: </label>
                                            <input asp-for="OgrenciAdresBilgi.PostaKodu" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="col-md-4 col-sm-12">
                                        <div class="form-group">
                                            <label>Telefon1: </label>
                                            <input asp-for="OgrenciAdresBilgi.Telefon1" class="form-control" />
                                        </div>
                                        <div class="form-group">
                                            <label>Telefon2: </label>
                                            <input asp-for="OgrenciAdresBilgi.Telefon2" class="form-control" />
                                        </div>
                                        <div class="form-group">
                                            <label>E-posta: </label>
                                            <input asp-for="OgrenciAdresBilgi.Eposta" class="form-control" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane fade" id="nav-about" role="tabpanel" aria-labelledby="nav-about-tab">
                                <div class="row" style="padding-left: 10px; padding-right: 10px;">
                                    <div class="col-md-3 col-sm-12">
                                        <div class="form-group">
                                            <label>Sınıf: </label>
                                            <input asp-for="OgrenciOkulBilgi.Sınıf" class="form-control" />
                                        </div>
                                        <div class="form-group">
                                            <label>Öğrenci Numarası: </label>
                                            <input asp-for="OgrenciOkulBilgi.OgrenciNo" class="form-control" />
                                        </div>
                                        <div class="form-group">
                                            <label>Öğrenci Tipi: </label>
                                            <input asp-for="OgrenciOkulBilgi.OgrenciTipi" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="col-md-3 col-sm-12">
                                        <div class="form-group">
                                            <label>Okul: </label>
                                            <input asp-for="OgrenciOkulBilgi.Okul" class="form-control" />
                                        </div>
                                        <div class="form-group">
                                            <label>Önceki Okul: </label>
                                            <input asp-for="OgrenciOkulBilgi.OncekiOkul" class="form-control" />
                                        </div>
                                        <div class="form-group">
                                            <label>Ayrılma Nedeni: </label>
                                            <input asp-for="OgrenciOkulBilgi.AyrilmaNedeni" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="col-md-3 col-sm-12">
                                        <div class="form-group">
                                            <label>Servis No: </label>
                                            <input asp-for="OgrenciOkulBilgi.ServisNo" class="form-control" />
                                        </div>
                                        <div class="form-group">
                                            <label>Oda No: </label>
                                            <input asp-for="OgrenciOkulBilgi.OdaNo" class="form-control" />
                                        </div>
                                        <div class="form-group">
                                            <label>Yatak No: </label>
                                            <input asp-for="OgrenciOkulBilgi.YatakNo" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="col-md-3 col-sm-12">
                                        <div class="form-group">
                                            <label>Abone Durumu: </label>
                                            <select class="form-control" asp-for="OgrenciOkulBilgi.AboneDurumu">
                                                <option value="0">Abone</option>
                                                <option value="1">abone Değil</option>
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <label>Notlar: </label>
                                            <textarea asp-for="OgrenciOkulBilgi.YatakNo" class="form-control">
                                </textarea>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <button typeof="button" id="btn-kaydet" class="btn" style="background-color: #204E5F; color:white; position:absolute; right:450px;"><strong>Kaydet</strong></button>
                        </div>
                    </div>
                </div>
            </form>
        </form>
    </div>
</div>


<style>


    nav > .nav.nav-tabs {
        border: none;
        color: #fff;
        background: #204E5F;
        border-radius: 0;
    }

    nav > div a.nav-item.nav-link,
    nav > div a.nav-item.nav-link.active {
        border: none;
        padding: 18px 25px;
