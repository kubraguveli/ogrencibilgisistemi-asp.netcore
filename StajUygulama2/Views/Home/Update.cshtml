            <input type="hidden" name="original.DogumYeri" value="@Model.DogumYeri" />
            <input type="hidden" name="original.OgrenciOkulBilgi.OncekiOkul" value="@Model.OgrenciOkulBilgi?.OncekiOkul" />
            <input type="hidden" name="original.OgrenciOkulBilgi.AboneDurumu" value="@Model.OgrenciOkulBilgi?.AboneDurumu" />
