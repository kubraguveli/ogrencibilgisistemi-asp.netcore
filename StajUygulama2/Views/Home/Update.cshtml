            <input type="hidden" name="original.OgrenciOkulBilgi.Okul" value="@Model.OgrenciOkulBilgi?.Okul" />
            <input type="hidden" name="original.OgrenciOkulBilgi.OgrenciTipi" value="@Model.OgrenciOkulBilgi?.OgrenciTipi" />
            <input type="hidden" name="original.Cinsiyet" value="@Model.Cinsiyet" />
