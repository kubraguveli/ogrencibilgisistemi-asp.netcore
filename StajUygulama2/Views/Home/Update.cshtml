            <input type="hidden" name="original.OgrenciOkulbilgi.Sınıf" value="@Model.OgrenciOkulBilgi?.Sınıf" />
            <input type="hidden" name="original.OgrenciOkulbilgi.OgrenciNo" value="@Model.OgrenciOkulBilgi?.OgrenciNo" />
            <input type="hidden" name="original.OgrenciAdresBilgi.Statu" value="@Model.OgrenciAdresBilgi?.Statu" />
            <input type="hidden" name="original.OgrenciAdresBilgi.Telefon1" value="@Model.OgrenciAdresBilgi?.Telefon1" />
