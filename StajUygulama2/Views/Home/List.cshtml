@using StajUygulama2.Models;
@model IEnumerable<StajUygulama2.Models.OgrenciBilgi>

@{
    ViewData["Title"] = "List";
}
<div class="container">
    <br />
    <h3 class=" text-white p-3" style="background-color: #204E5F;">Öğrenci Bilgi Sistemi</h3>

    <div class="card m-2">
        <div class="card-body" style="width:500px;">
            <form method="get" id="filter">
                <div class="form-group">
                    <input name="ogrencino" class="form-control" placeholder="Ogrenci No" value="@ViewBag.OgrenciNo" />
                </div>

                <div class="form-group">
                    <input name="ad" class="form-control" placeholder="Adı" value="@ViewBag.Ad" />
                </div>

                <div class="form-group">
                    <input name="soyad" class="form-control" placeholder="Soyadı" value="@ViewBag.Soyad" />
                </div>
                <button class="btn" style="background-color: #204E5F; color:white;"><strong>Filter</strong></button>
            </form>
        </div>
    </div>

    <table class="table table-bordered table-striped" m-5>
        <thead>
            <tr>
                <th>Kodu</th>
                <th>Ad</th>
                <th>Soyad</th>
                <th>Öğrenci Numarası</th>
                <th>E-posta</th>
                <th>Telefon</th>
                <th>Adres</th>
                <th></th>

            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                if (item.SilinmeTarihi == null)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Ad</td>
                        <td>@item.Soyad</td>
                        <td>@item.OgrenciOkulBilgi.OgrenciNo</td>
                        <td>@item.OgrenciAdresBilgi.Eposta</td>
                        <td>@item.OgrenciAdresBilgi.Telefon1</td>
                        <td>@item.OgrenciAdresBilgi.Adres1</td>
                        <td>
                            <form asp-action="Delete" method="post">
                                <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Update</a>
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <a asp-action="Index" style="background-color: #204E5F;color: white;" class="btn ">
        <strong>Yeni Kayıt</strong>
    </a>
</div>